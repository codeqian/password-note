<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@mipmap/bg"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/backBtn"
        android:background="@color/darkGreen"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/back_over"
            android:layout_margin="@dimen/little_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />
        <TextView
            android:text="设置"
            android:textColor="@color/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
    <LinearLayout
        android:padding="@dimen/textPadding"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="修改口令"
            android:textColor="@color/titleText"
            android:textSize="@dimen/mainTextH1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="在这里输入您的新口令，存储的信息将使用新口令进行加密，请谨慎使用。"
            android:textColor="@color/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/old_t"
            android:password="true"
            android:layout_marginTop="@dimen/little_margin"
            android:hint="请输入旧口令"
            android:textColor="@color/mainYellow"
            android:padding="@dimen/textPadding"
            android:background="@drawable/rounded_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/new_t"
            android:layout_marginTop="@dimen/little_margin"
            android:hint="请输入新口令"
            android:textColor="@color/mainYellow"
            android:padding="@dimen/textPadding"
            android:background="@drawable/rounded_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/okBtn"
            android:text="确定"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/little_margin"
            android:background="@color/mainYellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mainGreen" />
    <LinearLayout
        android:padding="@dimen/textPadding"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="关于应用"
            android:textColor="@color/titleText"
            android:textSize="@dimen/mainTextH1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="版本号：v0.1 2015.11"
            android:textColor="@color/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="作者：无牙。"
            android:textColor="@color/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mainGreen" />
    <LinearLayout
        android:padding="@dimen/textPadding"
        android:orientation="vertical"
        android:id="@+id/connectBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="联系作者"
            android:textColor="@color/titleText"
            android:textSize="@dimen/mainTextH1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="qzdszz@163.com"
            android:textColor="@color/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mainGreen" />
    <LinearLayout
        android:padding="@dimen/textPadding"
        android:orientation="vertical"
        android:id="@+id/githubBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="开源项目"
            android:textColor="@color/titleText"
            android:textSize="@dimen/mainTextH1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="https://github.com/codeqian/password-note/"
            android:textColor="@color/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>