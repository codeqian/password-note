<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainBody"
    android:layout_margin="@dimen/page_margin"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     >
    <!-- 标题-->
    <LinearLayout
        android:id="@+id/title_plan"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/indexbg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/index_t"
                android:text="42"
                android:textColor="@color/titleYellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
        <LinearLayout
            android:background="@color/titleYellow"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="title"
                android:id="@+id/title_t"
                android:layout_weight="1"
                android:textColor="@color/mainGreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />
            <EditText
                android:id="@+id/title_edit"
                android:background="@drawable/rounded_edittext"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="@color/mainYellow"
                android:layout_margin="@dimen/little_margin"
                android:paddingLeft="@dimen/textPadding"
                android:paddingRight="@dimen/textPadding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入标题"
                android:layout_gravity="center" />
            <ImageView
                android:layout_margin="@dimen/little_margin"
                android:id="@+id/saveBtn"
                android:src="@mipmap/savebtn"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_margin="@dimen/little_margin"
                android:id="@+id/editBtn"
                android:src="@mipmap/editbtn"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_margin="@dimen/little_margin"
                android:id="@+id/openBtn"
                android:src="@mipmap/arrowbtn"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <!-- 内容-->
    <LinearLayout
        android:id="@+id/contentPage"
        android:background="@color/mainYellow"
        android:orientation="vertical"
        android:padding="@dimen/textPadding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginBottom="@dimen/little_margin"
            android:id="@+id/account_t"
            android:text="account"
            android:textColor="@color/mainGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/account_edit"
            android:background="@drawable/rounded_edittext"
            android:singleLine="true"
            android:textColor="@color/mainYellow"
            android:layout_margin="@dimen/little_margin"
            android:paddingLeft="@dimen/textPadding"
            android:paddingRight="@dimen/textPadding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入账号" />
        <TextView
            android:layout_marginBottom="@dimen/little_margin"
            android:id="@+id/password_t"
            android:text="password"
            android:textColor="@color/mainGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/password_edit"
            android:background="@drawable/rounded_edittext"
            android:singleLine="true"
            android:textColor="@color/mainYellow"
            android:layout_margin="@dimen/little_margin"
            android:paddingLeft="@dimen/textPadding"
            android:paddingRight="@dimen/textPadding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入密码" />
        <TextView
            android:layout_marginBottom="@dimen/little_margin"
            android:id="@+id/info_t"
            android:hint="备注"
            android:textColorHint="@color/hintGray"
            android:textColor="@color/mainGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minLines="3"
            android:maxLines="3" />
        <EditText
            android:id="@+id/info_edit"
            android:background="@drawable/rounded_edittext"
            android:textColor="@color/mainYellow"
            android:layout_margin="@dimen/little_margin"
            android:paddingLeft="@dimen/textPadding"
            android:paddingRight="@dimen/textPadding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入备注信息"
            android:minLines="3"
            android:maxLines="3"/>
    </LinearLayout>
</LinearLayout>